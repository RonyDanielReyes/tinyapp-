<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="ml-auto">
        <% if (!user) { %>
          <!-- Display login and register buttons -->
          <a class="btn btn-outline-light mr-2" href="/login">Login</a>
          <a class="btn btn-outline-light" href="/register">Register</a> 
        <% } else { %> 
          <!-- Display user's email and logout button -->
          <span>Logged in as: <%= user.email %></span>
          <form method="POST" action="/logout" style="display: inline;">
            <button type="submit" class="btn btn-success">Logout</button>
          </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>